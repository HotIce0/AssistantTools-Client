<!--pages/user/bind/bind.wxml-->
<view class='login-form'>

  <form bindsubmit='doBind'>
    <view class='login-form-input'>
      <input type='number' name="userName" focus='true' placeholder='用户名 (工号/学号)' maxlength='11'></input>
    </view>
    <view class='login-form-input'>
      <input type='idcard' name="password" placeholder='密   码 (初始密码为身份证后六位)' password='true'></input>
    </view>
    <view class='login-form-submit'>
      <button form-type='submit'>绑定</button>
    </view>
  </form>
</view>