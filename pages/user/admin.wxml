<view class="page">
  <view class="page__hd">
    <view class="page__title">系统管理员菜单</view>
    <view class="page__desc">系统管理</view>
  </view>
  <view class="page__bd">
    <view class="weui-cells__title">平台基础数据管理</view>
    <view class="weui-cells weui-cells_after-title">
      <view bindtap='updataSchoolStartDate' class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">更新每学期的开学日期，以及学年学期范围</view>
        </view>
      </view>
      <view bindtap='updataYearTermNow' class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">更新现在的学年学期</view>
        </view>
      </view>
    </view>
  </view>
</view>